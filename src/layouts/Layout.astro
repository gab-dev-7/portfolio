---
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import '../globals.css?v=20251121_Final'; // Added unique query param
import CV from "@cv";
import Analytics from '@vercel/analytics/astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  keywords?: string[];
}

const { 
  title,
  image = CV.basics.image,
  canonicalURL = CV.basics.url,
  keywords = [ "Gabriel Windlin", "Security", "Portfolio" ]
} = Astro.props;

const { url, theme, name, location } = CV.basics;
const detailedDescription = `Gabriel Windlin - Security Engineer & Developer. Explore my portfolio.`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": name,
  "url": url,
  "image": image,
  "description": detailedDescription,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={detailedDescription} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="theme-color" content="#050a14" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    <ninja-keys id="command-palette" class="dark"></ninja-keys>
    <script type="module" src="https://unpkg.com/ninja-keys@1.2.2/dist/ninja-keys.js"></script>
    <script is:inline type="application/ld+json">
      [
        {
          "id": "Matrix",
          "title": "Enter the Matrix",
          "hotkey": "cmd+M",
          "mdicon": "code",
          "handler": () => {
            document.dispatchEvent(new CustomEvent('ninjakeys-matrix'));
          }
        }
      ]
    </script>
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    <Analytics />
  </head>
  <body class="relative bg-skin-fill font-sans !cursor-auto overflow-x-hidden selection:bg-skin-accent selection:text-skin-inverted">
    <slot />
    <Footer />
    
    <script src="../scripts/main.ts"></script>
    
    <script is:inline>
      // 1. Initialize Theme
      const getTheme = () => {
        return 'dark'; // Always return dark
      };
      
      const setTheme = (theme) => {
        if (theme === 'light') { // This branch will technically never be hit now
          document.documentElement.classList.remove('dark');
          document.documentElement.classList.add('light');
        } else {
          document.documentElement.classList.add('dark');
          document.documentElement.classList.remove('light');
        }
        localStorage.setItem('theme', theme);
      };

      // Apply on load
      setTheme(getTheme());

      // 2. Removed Listen for Toggle Event as theme is fixed to dark
      // window.addEventListener('theme-toggle', () => {
      //   const current = getTheme();
      //   const next = current === 'dark' ? 'light' : 'dark';
      //   setTheme(next);
      // });

      // 4. Neovim Mode Shortcut
      window.addEventListener('keydown', (e) => {
        if (e.key === 'v') {
          window.location.href = '/neovim';
        }
      });
    </script>
  </body>
</html>

<style>
  body {
    /* Smooth scrolling for the whole page */
    scroll-behavior: smooth;
  }
  /* Global reset for the new look */
  * { @apply rounded-lg; }
  a {
    color: var(--text-muted);
    text-decoration: none;
    transition: all 0.2s;
    border-bottom: 1px solid transparent;
  }
  a:hover {
    color: var(--text-main);
    border-bottom-color: var(--accent-cyan);
  }
  h1, h2, h3, h4 { @apply text-skin-base font-sans; margin: 0; }
  p { @apply text-sm text-skin-muted; line-height: 1.6; }
  
  ::-webkit-scrollbar { width: 6px; }
  ::-webkit-scrollbar-track { background: transparent; }
  ::-webkit-scrollbar-thumb { background: rgba(0, 242, 255, 0.2); border-radius: 3px; }
  ::-webkit-scrollbar-thumb:hover { background: rgba(0, 242, 255, 0.5); }
</style>
