---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  }).format(date);
};
---

<Layout title="Blog">
  <div class="container">
    <header>
      <h1>Blog</h1>
      <p class="subtitle">A collection of my thoughts and experiences.</p>
    </header>

    <main>
      <ul class="post-grid">
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.slug}`} class="post-card">
                <div class="card-content">
                  {/* META SECTION: Date + Tags */}
                  <div class="meta">
                    <time datetime={post.data.publishDate.toISOString()}>
                      {formatDate(post.data.publishDate)}
                    </time>

                    {/* Automatically render tags if they exist */}
                    {post.data.tags && (
                      <div class="tags">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="tag">#{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>

                  <h2>{post.data.title}</h2>
                  <p>{post.data.description}</p>
                </div>

                <div class="read-more">
                  <span>Read article</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <line x1="5" y1="12" x2="19" y2="12" />
                      <polyline points="12 5 19 12 12 19" />
                    </>
                  </svg>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>
</Layout>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    padding: 4rem 0 3rem;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
    background: linear-gradient(to right, #fff, #94a3b8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    color: #94a3b8;
    font-size: 1.2rem;
    font-family: monospace;
  }

  .post-grid {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    background: rgba(30, 41, 59, 0.4);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(-4px);
    background: rgba(30, 41, 59, 0.6);
    border-color: #ec4899;
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.5);
  }

  .post-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #ec4899, transparent);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .post-card:hover::before {
    opacity: 1;
  }

  /* --- NEW TAG STYLES --- */
  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  time {
    font-size: 0.875rem;
    color: #94a3b8;
    font-family: monospace;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    font-family: monospace;
    color: #22d3ee;
    background: rgba(34, 211, 238, 0.1);
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid rgba(34, 211, 238, 0.2);
    white-space: nowrap;
  }

  /* --- TYPOGRAPHY --- */
  h2 {
    color: #f1f5f9;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 1rem;
    transition: color 0.2s;
  }

  .post-card:hover h2 {
    color: #ec4899;
  }

  p {
    color: #94a3b8;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: #f1f5f9;
    margin-top: auto;
  }

  .read-more svg {
    transition: transform 0.2s;
  }
  .post-card:hover .read-more svg {
    transform: translateX(4px);
  }

  @media (max-width: 600px) {
    .post-grid {
      grid-template-columns: 1fr;
    }
    .meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
