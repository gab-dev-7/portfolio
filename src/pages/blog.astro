---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<Layout title="Blog">
  <div class="container">
    <header>
      <h1>Blog</h1>
      <p class="subtitle">A collection of my thoughts and experiences.</p>
    </header>

    <main>
      <ul>
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.slug}`}>
                <h2>{post.data.title}</h2>
                <p>{post.data.description}</p>
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toDateString()}
                </time>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>

  <div id="crt"></div>
</Layout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
  }

  header {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid #1e293b;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    color: #ffffff;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.25rem;
    font-family: var(--font-mono);
  }

  ul {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  li {
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #1e293b;
    transition:
      transform 0.25s ease,
      border-color 0.25s ease,
      box-shadow 0.25s ease;
  }

  li:hover {
    transform: translateY(-5px);
    border-color: var(--accent-cyan);
    box-shadow: 0 10px 40px -10px rgba(0, 255, 255, 0.15);
  }

  li:hover h2 {
    text-shadow: 0 0 12px rgba(255, 0, 128, 0.4);
    transition: text-shadow 0.25s ease;
  }

  li a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  h2 {
    color: var(--accent-pink);
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    transition: text-shadow 0.25s ease;
  }

  p {
    color: var(--text-muted);
    font-size: 1rem;
    margin: 0;
  }

  time {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-top: 1rem;
    display: block;
  }

  #crt {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 999;
    pointer-events: none;
  }

  #crt::before {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(
      to bottom,
      rgba(18, 16, 16, 0) 50%,
      rgba(0, 0, 0, 0.25) 50%
    );
    background-size: 100% 4px;
  }

  #crt::after {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: radial-gradient(
      circle,
      rgba(18, 16, 16, 0) 60%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }
</style>
