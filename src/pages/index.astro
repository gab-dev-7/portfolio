---
import Layout from "@/layouts/Layout.astro";
import Projects from "@/components/sections/Projects.astro";
import Experience from "@/components/sections/Experience.astro";
import Education from "@/components/sections/Education.astro";
import Contact from "@/components/sections/Contact.astro";
import { basics } from "@cv";
import { Icon } from "astro-icon/components";

const { name, label, summary, image, profiles } = basics;
---

<Layout title={`${name} - ${label}`}>
  <div class="container">
    <header>
      <img src={image} alt={name} class="profile-picture" />
      <h1>{name}</h1>
      <p class="subtitle">{label}</p>
      <nav>
        <div class="icon-row">
          <a
            href={profiles.find((p) => p.network === "GitHub")?.url}
            class="btn icon-btn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="github" />
          </a>
          <a
            href={profiles.find((p) => p.network === "LinkedIn")?.url}
            class="btn icon-btn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="linkedin" />
          </a>
          <a href="/cv.pdf" class="btn icon-btn" download>
            <Icon name="mdi:download" />
          </a>
          <a
            href={`mailto:${profiles.find((p) => p.network === "Email")?.url}`}
            class="btn icon-btn"
          >
            <Icon name="mail" />
          </a>
        </div>
      </nav>
    </header>

    <main>
      <section id="about">
        <h2>About</h2>
        <p>{summary}</p>
      </section>

      <section id="projects">
        <h2>Projects</h2>
        <Projects />
      </section>

      <section id="experience">
        <h2>Experience</h2>
        <Experience />
      </section>

      <section id="education">
        <h2>Education</h2>
        <Education />
      </section>

      <section id="contact">
        <h2>Contact Me</h2>
        <Contact />
      </section>
    </main>
  </div>
</Layout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--color-border);
    position: relative;
    overflow: hidden;
  }

  .profile-picture {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 3px solid var(--accent-pink);
    margin: 0 auto 1.5rem;
    display: block;
    transition: transform 1s;
  }

  .profile-picture.konami-spin {
    transform: rotate(360deg);
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    color: var(--text-main);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.25rem;
    font-family: var(--font-mono);
  }

  h2 {
    color: var(--text-main);
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-pink);
    display: inline-block;
  }

  section {
    margin-bottom: 4rem;
  }

  nav {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .icon-row {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .icon-btn {
    padding: 0.5rem;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: transparent;
    border: 1px solid var(--accent-pink);
    color: var(--text-muted);
  }

  .icon-btn:hover {
    background: var(--accent-pink);
    color: white;
  }

  .icon-btn :global(svg) {
    width: 24px;
    height: 24px;
  }
</style>
