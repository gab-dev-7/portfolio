---
import { education } from "@cv";
---

<div class="education-list">
  {
    education.map(({ institution, area, startDate, endDate, courses }) => {
      const startYear = new Date(startDate).getFullYear();
      let yearRange;
      if (institution === "ETH ZÃ¼rich") {
        yearRange = `expected graduation in ${new Date(endDate).getFullYear()}`;
      } else {
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Present";
        yearRange = `${startYear} - ${endYear}`;
      }

      return (
        <div class="card">
          <header>
            <h3>{institution}</h3>
            <p class="year">{yearRange}</p>
          </header>
          <p>{area}</p>
          {courses && (
            <ul class="courses">
              {courses.map((course) => (
                <li>{course}</li>
              ))}
            </ul>
          )}
        </div>
      );
    })
  }
</div>

<style>
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  .card {
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    transition: transform 0.3s, border-color 0.3s;
  }

  .card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-cyan);
  }

  .card header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  .card h3 {
    color: var(--accent-cyan);
    font-size: 1.25rem;
    margin: 0;
  }
  .card .year {
    color: var(--text-muted);
    font-family: var(--font-mono);
  }
  .card p {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin: 0;
  }
  .courses {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
    list-style: none;
    padding: 0;
  }
  .courses li {
    background: transparent;
    padding: 0.2em 0.4em;
    border-radius: 4px;
    color: var(--text-muted);
    font-size: 0.8rem;
    font-family: var(--font-mono);
    border: 1px solid var(--color-border);
  }
</style>
