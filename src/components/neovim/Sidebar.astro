---
const isTildePage = true;
---

<div class="bg-nvim-bg text-nvim-gray w-6 flex-shrink-0 text-right pr-2 py-2">
  {
    isTildePage ? (
      <div class="h-full">
        {Array(100)
          .fill("~")
          .map((line) => (
            <div>{line}</div>
          ))}
      </div>
    ) : (
      <div class="h-full">
        {Array(100)
          .fill(0)
          .map((_, index) => (
            <div>{index + 1}</div>
          ))}
      </div>
    )
  }
</div>
